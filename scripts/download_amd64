#!/bin/bash
set -e

cd $(dirname $0)/..

VERSION=v5.4.0-rancher-2-2
HASH=9350ac18717a287c12fe5121d3a2c47f35f4744c

if [ "$(sha1sum -b strongswan/strongswan-${VERSION}.tar.gz | awk '{print $1}')" != "$HASH" ]; then
    mkdir -p strongswan
    curl -L https://github.com/rancher/strongswan-package/releases/download/${VERSION}/strongswan-${VERSION}.tar.gz > strongswan/strongswan-${VERSION}.tar.gz
    [ "$(sha1sum -b strongswan/strongswan-${VERSION}.tar.gz | awk '{print $1}')" == "$HASH" ]
fi
